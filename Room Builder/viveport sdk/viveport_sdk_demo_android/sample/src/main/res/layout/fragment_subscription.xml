<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subscription">

    <Button
        android:id="@+id/init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_init"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/is_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_subscription_is_ready"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/init" />

    <Button
        android:id="@+id/transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_subscription_transaction_type"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/is_ready" />

    <Button
        android:id="@+id/is_windows_subscriber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_subscription_is_windows_subscriber"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transaction_type" />

    <Button
        android:id="@+id/is_android_subscriber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_subscription_is_android_subscriber"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/is_windows_subscriber" />

    <Button
        android:id="@+id/shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_shutdown"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/is_android_subscriber"/>

    <include layout="@layout/log"/>

</android.support.constraint.ConstraintLayout>