<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".IAP">

<Button
    android:id="@+id/init"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_init"
    android:textAllCaps="false"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
<Button
    android:id="@+id/is_ready"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_isready"
    android:textAllCaps="false"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/init"/>
<Button
    android:id="@+id/get_balance"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_get_balance"
    android:textAllCaps="false"
    app:layout_constraintStart_toEndOf="@id/is_ready"
    app:layout_constraintTop_toBottomOf="@id/init"/>
<Button
    android:id="@+id/request"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_request"
    android:textAllCaps="false"
    app:layout_constraintTop_toBottomOf="@id/is_ready"
    app:layout_constraintLeft_toLeftOf="parent"/>
<Button
    android:id="@+id/request_userdata"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_request_userdata"
    android:textAllCaps="false"
    app:layout_constraintStart_toEndOf="@id/request"
    app:layout_constraintTop_toTopOf="@id/request"/>
<Button
    android:id="@+id/purchase"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_purchase"
    android:textAllCaps="false"
    app:layout_constraintTop_toBottomOf="@id/request"
    app:layout_constraintLeft_toLeftOf="parent"/>
<Button
    android:id="@+id/query"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_query"
    android:textAllCaps="false"
    app:layout_constraintStart_toEndOf="@id/purchase"
    app:layout_constraintTop_toTopOf="@id/purchase"/>
<Button
    android:id="@+id/query_purchase_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_iap_query_purchase_list"
    android:textAllCaps="false"
    app:layout_constraintStart_toEndOf="@id/query"
    app:layout_constraintTop_toTopOf="@id/query"/>
<Button
    android:id="@+id/shutdown"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/api_shutdown"
    android:textAllCaps="false"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/query_purchase_list"/>
<include layout="@layout/log"/>
</android.support.constraint.ConstraintLayout>