<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserProfile">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_init"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/is_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_user_is_ready"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/init"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_user_id"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/is_ready"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_user_name"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/is_ready"
        app:layout_constraintStart_toEndOf="@id/user_id"/>
    <Button
        android:id="@+id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_user_avatar"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/is_ready"
        app:layout_constraintStart_toEndOf="@id/user_name"/>
    <Button
        android:id="@+id/shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/api_shutdown"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_avatar"/>

    <include layout="@layout/log"/>
</android.support.constraint.ConstraintLayout>